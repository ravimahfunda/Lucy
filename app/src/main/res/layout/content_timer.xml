<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chevalier.lucy.TimerActivity"
    tools:showIn="@layout/app_bar_timer"
    android:padding="@dimen/padding_medium"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer_title"
            android:text="Learn ReactJS"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/timer_location"
            android:text="at Chevalier Lab"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timer_timer"
        android:background="@color/colorSuspend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:text="@string/lbl_txt_suspend"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:gravity="center"
            android:text="00:00:00"
            android:textSize="64sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_medium"
        android:gravity="center">

        <Button
            android:id="@+id/btn_action_one"
            android:text="@string/btn_txt_suspend"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorAccent"/>

        <Button
            android:visibility="visible"
            android:id="@+id/btn_action_two"
            android:textSize="18sp"
            android:text="@string/btn_txt_skip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>


</LinearLayout>
